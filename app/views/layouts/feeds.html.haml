!!!
%html
  %head
    :javascript
      var loc = window.location.href+'';
        if (loc.indexOf('http://')==0){
            window.location.href = loc.replace('http://','https://');
        }
    = javascript_include_tag 'https://code.getmdl.io/1.3.0/material.min.js'
    = stylesheet_link_tag 'https://code.getmdl.io/1.3.0/material.blue_grey-pink.min.css'
    = stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons'
    = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css'\
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto:300,400,500,700'
    
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SocialMediaUnifier
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'feed'
    = javascript_include_tag 'generalLayout'
    = javascript_include_tag 'load-image-all-min'
    = javascript_include_tag ''
    
    
  %body
    .mdl-layout.mdl-js-layout.mdl-layout
      %header.mdl-layout__header
        .mdl-layout__header-row
          %span.mdl-layout-title Social Media Unifier
          .mdl-layout-spacer
        .mdl-layout__tab-bar.mdl-js-ripple-effect
          = link_to 'Feed', feeds_index_path, class: 'mdl-layout__tab', id: 'feed'
          = link_to 'Messages', feeds_messages_path, class: 'mdl-layout__tab', id: 'messages'
          = link_to 'Post', feeds_post_path, class: 'mdl-layout__tab', id: 'post'
          = link_to 'Archives', feeds_archives_path, class: 'mdl-layout__tab', id: 'archives'
          = link_to 'Notifications', feeds_notifications_path, class: 'mdl-layout__tab', id: 'notifications'
      .mdl-layout__drawer
        %span.mdl-layout-title Settings
        %nav.mdl-navigation
          = link_to 'Settings', settings_index_path, class: 'mdl-navigation__link', id: 'settings'
          = link_to 'Metrics', settings_metrics_path, class: 'mdl-navigation__link', id: 'metrics'
          = link_to 'Accounts', settings_accounts_path, class: 'mdl-navigation__link', id: 'accounts'
          = link_to 'Custom Friends', settings_custom_friends_path, class: 'mdl-navigation__link', id: 'custom_friends'
          = link_to 'Sign Out', destroy_user_session_path, method: "delete", class: 'mdl-navigation__link', id: 'sign_out'
    
      %main.mdl-layout__content
        %br
        = yield
       
      %footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          .mdl-logo Social Media Unifier
        .mdl-mini-footer__right-section
          .mdl-logo Team Dirty Bits(CSCE 431) 